        <property name="javaMailProperties">
            <props>
                <prop key="mail.smtp.auth">true</prop>
                <prop key="mail.smtp.starttls.enable">true</prop>
            </props>
        </property>
    </bean>-->

    <bean id="message" class="org.springframework.mail.SimpleMailMessage">
        <property name="from" value="noreply@social.com"/>
    </bean>

    <bean id="socialMail" class="com.epam.brest.course2015.social.mail.SocialMailImpl">
        <property name="mailSender" ref="mailSender"/>
    </bean>

    <bean id="freemarkerMailConfig" class="freemarker.template.Configuration">
        <property name="directoryForTemplateLoading" value="classpath:templates"/>
    </bean>

    <aop:aspectj-autoproxy/>
    <bean class="com.epam.brest.course2015.social.test.SocialLogger"/>
</beans>