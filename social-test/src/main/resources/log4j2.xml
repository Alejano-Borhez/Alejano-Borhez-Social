<?xml version="1.0" encoding="UTF-8"?>

<Configuration>

    <properties>
        <property name="url">
            logs/server.log
        </property>
        <property name="sharedLogFolder">
            /home/alexander_borohov/work/projects/Alejano-Borhez-Social/logs/server.log
        </property>
    </properties>

    <Appenders>
        <Console name="Console" target="SYSTEM.OUT">
            <Patternlayout pattern="%d{HH:mm:ss.SSS}[%t] %-5level - %msg%n"/>
        </Console>

        <File name="File" url="${url}">
            <PatternLayout pattern="%d[%t] %msg %n"/>
        </File>

        <File name="SharedLogFolder" url="${sharedLogFolder}">
            <PatternLayout pattern="%d[%t] %msg %n"/>
        </File>

    </Appenders>


    <Loggers>
        <Logger name="com.epam.brest.course2015.social" level="DEBUG">
            <AppenderRef ref="File"/>
            <AppenderRef ref="SharedLogFolder"/>
        </Logger>

        <Root level="ERROR">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>

</Configuration>